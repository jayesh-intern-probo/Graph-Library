<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:graph="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTextPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/myGraph"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clDisplayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="@id/clTextPrompt"
            app:layout_constraintLeft_toLeftOf="@id/clTextPrompt"
            app:layout_constraintTop_toTopOf="@id/clTextPrompt"
            app:layout_constraintBottom_toBottomOf="@id/clTextPrompt"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingTop="9dp"
            android:paddingLeft="12dp"
            android:paddingBottom="9dp"
            android:background="@drawable/rectangle">


            <TextView
                android:id="@+id/tvProbability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/clDisplayText"
                app:layout_constraintTop_toTopOf="@id/clDisplayText"
                android:text="40%"
                android:textFontWeight="600"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#8CBDFF"
                android:paddingRight="9dp"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvProbability"
                app:layout_constraintLeft_toLeftOf="@id/clDisplayText"
                app:layout_constraintBottom_toBottomOf="@id/clDisplayText"
                android:text="9:35 pm"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:paddingRight="9dp"/>

            <TextView
                android:id="@+id/tvHeadline"
                android:visibility="visible"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/tvProbability"
                app:layout_constraintRight_toRightOf="@id/clDisplayText"
                app:layout_constraintTop_toTopOf="@id/clDisplayText"
                app:layout_constraintBottom_toBottomOf="@id/clDisplayText"
                android:layout_marginLeft="12dp"
                android:text="Ranbirâ€™s Shamshera movie declared flop, lowest opening in 2022."
                android:textSize="12sp"
                android:textColor="@color/white"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_height="7dp"
            android:layout_width="15dp"
            android:background="@drawable/triangle"
            app:layout_constraintLeft_toLeftOf="@id/clDisplayText"
            app:layout_constraintRight_toRightOf="@id/clDisplayText"
            app:layout_constraintTop_toBottomOf="@+id/clDisplayText"
            android:rotation="180"
            />
    
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.finalgraphlibrary.LineGraph
        android:visibility="visible"
        android:id="@+id/myGraph"
        android:layout_width="match_parent"
        android:layout_height="286dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clTextPrompt"
        graph:graphLeftPadding="24dp"
        graph:graphRightPadding="16dp"
        graph:graphBottomPadding="32dp"
        graph:axesThickness="1dp"
        graph:labelSize="8sp"
        graph:labelMarginFromXAxis="4dp"
        graph:labelMarginFromYAxis="7dp"
        graph:yAxisTitle="%"
        graph:reserveSizeForYAxisTitle="18dp"
        graph:plotLineWidth="4dp"
        graph:markerCircleRadius="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>